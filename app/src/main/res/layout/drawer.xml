<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:background="#ffffff"
    android:clickable="true"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/hot"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/dark_shade_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_white"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person Name"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginStart="18dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply Dummy."
            android:textColor="#ffffff"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="18dp"
            android:textSize="15sp"
            android:layout_marginStart="18dp"/>

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:textSize="15sp"
        android:text="Profile"
        android:drawableStart="@drawable/profile"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:visibility="gone"
    android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myplan"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/profile"
        android:text="My Plan"
        android:padding="10dp"
        android:textSize="15sp"

        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diary"
        android:text="Diary"
        android:textSize="15sp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/profile"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:text="History"
        android:textSize="15sp"
android:drawablePadding="10dp"
        android:drawableStart="@drawable/profile"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/analysis"
        android:text="Analysis"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/profile"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wallet"
        android:text="Wallet"
        android:padding="10dp"
        android:textSize="15sp"
android:drawableStart="@drawable/wallet"
        android:drawablePadding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rewards"
        android:text="Rewards"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/wallet"
        android:textSize="15sp"

        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textSize="15sp"
android:drawableStart="@drawable/address"
        android:drawablePadding="10dp"
        android:text="Address"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodoutlet"
        android:text="Food Qutlet"
        android:drawableStart="@drawable/food_outlet"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification"
        android:textSize="15sp"
android:drawablePadding="10dp"
        android:drawableStart="@drawable/notification"
        android:text="Notificetion"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>


    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/notification"
        android:padding="10dp"
        android:text="Setting"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blog"
        android:text="Blog"
        android:textSize="15sp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/notification"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refer"
        android:text="Refer a friend"
        android:padding="10dp"
        android:textSize="15sp"
android:drawableStart="@drawable/notification"
        android:drawablePadding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Logout"
        android:textSize="15sp"
        android:drawableStart="@drawable/logout"
        android:padding="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF5722"/>

</LinearLayout>
</ScrollView>